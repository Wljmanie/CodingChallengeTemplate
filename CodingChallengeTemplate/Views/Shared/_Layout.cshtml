@inject IViewLocalizer localizar

<!DOCTYPE html>
@{ var culture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
    string language = "";
}
@if (culture.RequestCulture.Culture.Name == "nl-NL")
{
    language = "nl";
}
else if (culture.RequestCulture.Culture.Name == "en-US")
{
    language = "en";
}

<html lang="@language" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0  shrink-to-fit=no" />
    <title>@ViewData["Title"] - CodingChallengeTemplate</title>

    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!--Font Awesome-->
    <script src="https://kit.fontawesome.com/f01a075031.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <!--Prism-->
    <link href="~/css/prism.css" rel="stylesheet" />

    <!--Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Roboto&display=swap" rel="stylesheet">

    <!--FavIcon-->
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/FavIcon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/FavIcon//favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/FavIcon//favicon-16x16.png">
    <link rel="manifest" href="~/img/FavIcon/site.webmanifest">

</head>

<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!--This will be my wljm logo that links to my portfolio.-->
                <div class="nav-width-fix">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/WLJM - WHITE - temp.svg" height="25" alt=@localizar["WLJM Personal Logo"] />
                    </a>
                </div>

                <!--This is the App Name / Brand Name-->
                <div class="">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        - APPNAME -
                    </a>
                </div>

                <div class="nav-width-fix d-flex justify-content-end">
                    <!--Dropdown menu button on smaller devices-->
                    <button id="menuButton" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <i id="dropdownbutton" class="far fa-caret-square-down fa-2x footer-icons"></i>
                    </button>
                </div>

                <!--This will have all the links to all the pages.-->
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between justify-content-sm-start align-items-center">
                    <ul class="navbar-nav flex-grow-1 text-center">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "AppJS" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="AppJS">App in JS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "CodeJS" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="CodeJS">Code in JS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "AppCS" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="AppCS">App in C#</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "CodeCS" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="CodeCS">Code in C#</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="//github.com/Wljmanie" target="_blank">Git Repo</a> <!--Insert the actual Git Repo-->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="//wesleymanie.nl" target="_blank">@localizar["About Me"]</a>
                    </ul>
                    <!--Culture Flags-->
                    <div class="nav-item">
                        <partial name="_culture" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!--MAIN BODY-->
    @RenderBody()

    <!--FOOTER-->
    <footer class="border-top footer mt-auto py-2">
        <div class="container-fluid">
            <div class="row row-cols-1 row-cols-lg-3">
                <!--Copyright and email-->
                <div class="col d-flex align-items-center justify-content-center justify-content-lg-start order-last order-lg-first">
                    <span class="regular-text">
                        &copy; 2021 - Wesley L J Manie | <a class="regular-text" href="mailto:emailadres">wesley@wesleymanie.nl</a>
                    </span>
                </div>
                <!--My Personal Brand-->
                <div class="col d-flex align-items-center justify-content-center gy-1 gy-lg-0">
                    <a href="//wesleymanie.nl" target="_blank">
                        <img class="footer-personal-logo" src="~/img/FULL NAME - WHITE - temp.svg" alt="Wesley L J Manie" />
                    </a>
                </div>
                <!--Social Media Icons-->
                <div class="col d-flex align-items-center justify-content-center justify-content-lg-end gy-1 gy-lg-0">
                    <div class="row">
                        <!--Twitter-->
                        <div class="col">
                            <a class="footer-icons" href="//twitter.com/WesleyLJManie" target="_blank"><i class="fab fa-3x fa-twitter-square"></i></a>
                        </div>
                        <!--LinkedIn-->
                        <div class="col">
                            <a class="footer-icons" href="//www.linkedin.com/in/WesleyManie/" target="_blank"><i class="fab fa-3x fa-linkedin"></i></a>
                        </div>
                        <!--Github-->
                        <div class="col">
                            <a class="footer-icons" href="//github.com/Wljmanie" target="_blank"><i class="fab fa-3x fa-github-square"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!--JQuery for development-->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <!--JQuary Compressed for deployment-->
    @*<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>*@

    <!--Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!--Prism-->
    <script src="~/js/prism.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        let menuButton = document.querySelector('#menuButton');
        menuButton.addEventListener('click', on_click_menu);
        let elem = document.getElementById("dropdownbutton");

        function on_click_menu() {
            elem.classList.toggle("fa-caret-square-up");
            elem.classList.toggle("fa-caret-square-down");
        }
    </script>
</body>
</html>
