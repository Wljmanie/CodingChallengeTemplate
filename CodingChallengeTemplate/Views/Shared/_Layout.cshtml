            <div class="row row-cols-1 row-cols-md-3">
                <!--Copyright and email-->
                <div class="col">
                    <div>
                        &copy; 2021 - Wesley L J Manie - <b style="color:darkred">MY EMAIL ADRESS</b>
                    </div>
                </div>
                <!--My Personal Brand-->
                <div class="col">
                    <div>

                    </div>
                </div>
                <!--Social Media Icons-->
                <div class="col">
